#!/bin/bash
# set -x
####################################
# get script directory
SWD=$(dirname ${0})
###################################
# load support files
source "${SWD}/../config/orcl_config"
source "${SWD}/../lib/orcl_lib"
###################################
if [ -z "$1" ]
then
echo "Syntax: $0 hostname"
exit 1
fi
HOST=$1
SIDS=$(ssh -q -i "${IDFILE}" -t oracle@$HOST "cat /etc/oratab | egrep -iv '^#|agent|#\s*ignore' | cut -s -d: -f1 | sort | tr '\r\n' ' '")
echo $SIDS
exit 0
###################################
